<%- include('./partials/header.ejs'); %>

  <div class="bg-gray">
    
 

  <div style="padding-top: 100px; margin-top: 50px; margin-bottom: 50px;">
   
  
  <% if (newUser && userLastName) { %>

    <div class="alert alert-info" role="alert">
      <center> Congratulation , your account has been successfully created. Please Login Now </center>
    </div>
    <% } %>

  </div>
  <!-- nav bar end -->
 





        <section class="login border-top-1">
          <div class="container">
            <div class="row justify-content-center">
              <div style="margin-top: 0px;" class="col-lg-5 col-md-8 align-item-center">
                <div class="border">
                  <h3 class="bg-gray p-4">Login Now</h3>
                  <form method="post" action="/login">
                    <fieldset class="p-4">
                      <input type="email" name="email" id="email" placeholder="Email" class="border p-3 w-100 my-2"
                        value="<%= data.email %>" />
                      <% if (errors.email) { %>
                        <p class="error show">
                          <%= errors.email.msg %>
                        </p>
                        <% } %>
                          <input type="password" name="password" id="password" placeholder="Password"
                            class="border p-3 w-100 my-2" />
                          <% if (errors.password) { %>
                            <p class="error show">
                              <%= errors.password.msg %>
                            </p>
                            <% } %>
                              <% if (errors.common) { %>
                                <p class="error show">
                                  <%= errors.common.msg %>
                                </p>
                                <% } %>
                                  <button type="submit" class="
                      d-block
                      py-3
                      px-5
                      bg-primary
                      text-white
                      border-0
                      rounded
                      font-weight-bold
                      mt-3
                    ">
                                    Log in
                                  </button>
                                  <a class="mt-3 d-block text-primary" href="#">Forget Password?</a>
                                  <a class="mt-3 d-inline-block text-primary" href="/register">Register Now</a>
                    </fieldset>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </section>
</div>
        <%- include('./partials/footer.ejs'); %>

  


</body>

</html>