<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>
    <%= title %>
  </title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>

  <link rel="stylesheet" href="plugins/bootstrap/css/bootstrap.min.css" />

  <link href="plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

  <link href="css/style.css" rel="stylesheet" />

  <script>
    //  window.location.replace("/");
    function logout() {
      fetch("/", {
        method: "DELETE",
      });
      setTimeout(() => {
        window.location.replace("/");
      }, 1000);
    }
  </script>

</head>

<body>
  <!-- Nav bar -->
  <section>
    <nav id="navtop" class="
          navbar navbar-expand-lg
          bg-white
          navbar-light
          navigation
          fixed-top
        ">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <img src="images/logo.png" alt="RailTracks" />
        </a>
        <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarCollapse">
          <div class="navbar-nav ms-auto">
            <p>
              <%= loggedInUser.lastName %>
            </p>
            <% if (loggedInUser && loggedInUser.email) { %>
              <a href="#" class="nav-item nav-link active d-none" aria-current="page">Home</a>
              <a href="#" class="nav-item nav-link">Profile(<%= loggedInUser.lastName %> )</a>
              <a href="#" class="nav-item nav-link">Messages</a>
              <a href="#" class="nav-item nav-link">Blogs</a>
              <a href="#" onclick="logout()" class="nav-item nav-link">Log Out</a>
              <% } else { %>
                <a class="nav-link login-button" href="/login">Offer Mentorship</a>

                <a class="nav-link text-white add-button" href="#">Find Mentor</a>
                <% } %>
          </div>
        </div>
      </div>
    </nav>
  </section>

  <div style="padding-top: 100px; margin-top: 50px; margin-bottom: 50px;">
   
  
  <% if (newUser && userLastName) { %>

    <div class="alert alert-info" role="alert">
      <center> Congratulation , your account has been successfully created. Please Login Now </center>
    </div>
    <% } %>

  </div>
  <!-- nav bar end -->
 





        <section class="login border-top-1">
          <div class="container">
            <div class="row justify-content-center">
              <div style="margin-top: 0px;" class="col-lg-5 col-md-8 align-item-center">
                <div class="border">
                  <h3 class="bg-gray p-4">Login Now</h3>
                  <form method="post" action="/login">
                    <fieldset class="p-4">
                      <input type="email" name="email" id="email" placeholder="Email" class="border p-3 w-100 my-2"
                        value="<%= data.email %>" />
                      <% if (errors.email) { %>
                        <p class="error show">
                          <%= errors.email.msg %>
                        </p>
                        <% } %>
                          <input type="password" name="password" id="password" placeholder="Password"
                            class="border p-3 w-100 my-2" />
                          <% if (errors.password) { %>
                            <p class="error show">
                              <%= errors.password.msg %>
                            </p>
                            <% } %>
                              <% if (errors.common) { %>
                                <p class="error show">
                                  <%= errors.common.msg %>
                                </p>
                                <% } %>
                                  <button type="submit" class="
                      d-block
                      py-3
                      px-5
                      bg-primary
                      text-white
                      border-0
                      rounded
                      font-weight-bold
                      mt-3
                    ">
                                    Log in
                                  </button>
                                  <a class="mt-3 d-block text-primary" href="#">Forget Password?</a>
                                  <a class="mt-3 d-inline-block text-primary" href="/register">Register Now</a>
                    </fieldset>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </section>

        <footer>
          <p>Copyright Â© 2021 RailTracks</p>
        </footer>

        <!-- JAVASCRIPTS -->
        <script src="plugins/bootstrap/js/bootstrap.min.js"></script>


</body>

</html>