<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= title %></title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

    <link rel="stylesheet" href="/plugins/bootstrap/css/bootstrap.min.css" />

    <link
      href="/plugins/font-awesome/css/font-awesome.min.css"
      rel="stylesheet"
    />

    <link href="/css/style.css" rel="stylesheet" />
<script>
  //  window.location.replace("/");
   function logout() {
        fetch("/", {
          method: "DELETE",
        });
        setTimeout(() => {
          window.location.replace("/");
        }, 1000);
      }
</script>

  </head>

  <body>

   
    <!-- Nav bar -->
     <section class="nav-header">
      <nav
        id="navtop"
        class="
          navbar navbar-expand-lg
          bg-white
          navbar-light
          navigation
          fixed-top
        "
      >
        <div class="container-fluid">
          <a class="navbar-brand" href="#">
            <img src="/images/logo.png" alt="RailTracks" />
          </a>
          <button
            type="button"
            class="navbar-toggler"
            data-bs-toggle="collapse"
            data-bs-target="#navbarCollapse"
          >
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto">
              <% if (loggedInUser && loggedInUser.email) { %>
              <a
                href="#"
                class="nav-item nav-link active d-none"
                aria-current="page"
                >Home</a
              >
              
              <a href="/profile" class="btn-5 nav-item nav-link" style="color:black;" ><%= loggedInUser.firstName %>  <%= loggedInUser.lastName %> </a>
              <a href="#" class="btn-5 nav-item nav-link" style="color:black;">Messages</a>
              <a href="#" class="btn-5 nav-item nav-link" style="color:black;">Blogs</a>
              <a href="/blog/myBlogs" class="btn-5 nav-item nav-link" style="color:black;">My Blogs</a>
              <a href="#" onclick="logout()" class="btn-5 nav-item nav-link" style="color:black;">Log Out</a>
              <% } else { %>
              <a class="nav-link login-button" href="/login"
                >Offer Mentorship</a
              >

              <a class="nav-link text-white add-button" href="#">Find Mentor</a>
              <% } %>
            </div>
          </div>
        </div>
      </nav>
    </section>
    

    <section class="create-blog" style="margin-top: 85px;">
      <form class="blog-form" encType="multipart/form-data"
            method="POST" >
        <input type="text" name="title" id="title" placeholder="Enter Blog title">
        <input type="file" name="thumbnails" id="thumbnails">
        <!-- <button class="blog-img-button">Choose background</button> -->
        <textarea placeholder="Enter blog content" id="text" name="text"></textarea>
        <input type="hidden" value="<%= loggedInUser.firstName %>  <%= loggedInUser.lastName %> " name="author_name" >
        <input type="hidden" value="<%= loggedInUser.email %>" name="author_email" >


        <input type="submit" value="Submit">
      </form>

    </section>

    <footer id="sticky-footer" class="flex-shrink-0 py-2 text-white">
      <div class="container text-center">
        <small>Copyright &copy; RailTracks</small>
      </div>
    </footer>

  <script>
    /// on scrolling nav bar padding reduce
    window.onscroll = function () {
      scrollFunction();
    };

    function scrollFunction() {
      if (
        document.body.scrollTop > 80 ||
        document.documentElement.scrollTop > 80
      ) {
        document.getElementById("navtop").style.padding = "2px 2px";
      } else {
        document.getElementById("navtop").style.padding = "20px 20px";
      }
    }
  </script>

  <script src="plugins/bootstrap/js/bootstrap.min.js"></script>
  </body>

  </html>