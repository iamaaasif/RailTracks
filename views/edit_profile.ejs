    <body>
        <div class="container" style="margin-top: 76px;">
        <div class="row flex-lg-nowrap">


          <div class="col">
            <div class="row">
              <div class="col mb-3">
                <div class="card">
                  <div class="card-body">
                    <div class="e-profile">
                      <div class="row">
                        <form action="" encType="multipart/form-data" method="post">

                        <div class="col-12 col-sm-auto mb-3">
                          <div class="mx-auto" style="width: 140px;">
                            <div class="d-flex justify-content-center align-items-center rounded" style="width: 250px; height: 140px; background-color: rgb(233, 236, 239); margin-left: -48px;">
                              <span style="color: rgb(166, 168, 170);"></span>
                              <input type="file" name="profile_picture" id="" style="margin-left: 25px;">
                            </div>
                          </div>
                        </div>
                        <div class="col d-flex flex-column flex-sm-row justify-content-center mb-3", align-items-center>
                          <div class="text-center text-sm-left mb-2 mb-sm-0">
                            <h4 class="pt-sm-2 pb-1 mb-0 text-nowrap", style="text-align: center"><%= loggedInUser.firstName %> <%= loggedInUser.lastName %> </h4>


                            <div class="mt-2">
                              <input type="submit" class="btn btn-primary" value="Change Photo">
                            </div>
                          </div>

                        </div>
                        </form>
                      </div>

                      <div class="tab-content pt-3">

                          <form class="form" novalidate="" method="post">
                            <div class="row">
                              <div class="col">
                                <div class="row">
                                  <div class="col">
                                    <div class="form-group">
                                      <label>First Name</label>
                                      <input class="form-control" type="text" name="firstName" placeholder="First Name" value="">
                                    </div>
                                  </div>
                                  <div class="col">
                                    <div class="form-group">
                                      <label>Last Name</label>
                                      <input class="form-control" type="text" name="lastName" placeholder="Last Name" value="">
                                    </div>
                                  </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                      <div class="form-group">
                                        <label>Current Role</label>
                                        <input class="form-control" type="text" name="role" placeholder="Software Engineer" value="">
                                      </div>
                                    </div>
                                    <div class="col">
                                      <div class="form-group">
                                        <label>Company Name</label>
                                        <input class="form-control" type="text" name="company" placeholder="Google" value="">
                                      </div>
                                    </div>
                                  </div>

                                <div class="row">
                                  <div class="col">
                                    <div class="form-group">
                                      <label>Skills</label>
                                      <input class="form-control" name="skills" type="text" placeholder="C, Java, Python">
                                    </div>
                                  </div>
                                </div>
                                <div class="row">
                                  <div class="col mb-3">
                                    <div class="form-group">
                                      <label>About</label>
                                      <textarea class="form-control" rows="5" placeholder="My Bio" name="about"></textarea>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            </div>
                            <div class="row">
                              <div class="col-12 col-sm-6 mb-3">
                                <div class="mb-2"><b>Contact Details</b></div>
                                <div class="row">
                                  <div class="col">
                                    <div class="form-group">
                                      <label>Phone No</label>
                                      <input class="form-control" type="text" name="phone" placeholder="8801700000000">
                                    </div>
                                  </div>
                                </div>
                                <div class="row">
                                  <div class="col">
                                    <div class="form-group">
                                      <label>LinkedIn Profile</label>
                                      <input class="form-control" type="text" name="linkedin" placeholder="https://bd.linkedin.com/in/test">
                                    </div>
                                  </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                      <div class="form-group">
                                        <label>Twitter Profile</label>
                                        <input class="form-control" type="text" name="twitter" placeholder="https://twitter.com/test">
                                      </div>
                                    </div>
                                  </div>

                              </div>

                            </div>

                            <div class="row">
                              <div class="col-12 col-sm-6 mb-3">
                                <div class="mb-2"><b>Mentorship Details</b></div>
                                <div class="row">
                                  <div class="col">
                                    <div class="form-group">
                                      <label>Calls per months</label>
                                      <input class="form-control" type="number" name="callsPerMonth" placeholder="12">
                                    </div>
                                  </div>
                                </div>
                                <div class="row">
                                  <div class="col">
                                    <div class="form-group">
                                      <label>Maximum Response Time</label>
                                      <input class="form-control" type="number" name="maximunResponseTime" placeholder="12">
                                    </div>
                                  </div>
                                </div>
                               

                              </div>

                            </div>
                            <div class="row">
                              <div class="col d-flex justify-content-end">
                                <input type="submit" class="btn btn-primary" value="Save Changes">
                              </div>
                            </div>
                          </form>


                      </div>
                    </div>
                  </div>
                </div>
              </div>


            </div>

          </div>
        </div>
        </div>
        <footer id="sticky-footer" class="flex-shrink-0 py-2 text-white bg-black">
            <div class="container text-center">
              <small>Copyright &copy; RailTracks</small>
            </div>
          </footer>

    </body>
